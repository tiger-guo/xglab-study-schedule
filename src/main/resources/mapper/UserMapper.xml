<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.xglab.studySchedule.dao.UserMapper">
    <select id="list" resultType="com.xglab.studySchedule.domain.User">
        select *
        from user
    </select>
    <select id="findById" parameterType="int" resultType="com.xglab.studySchedule.domain.User">
        select *
        from user
        where id = #{value}
    </select>
    <update id="update" parameterType="com.xglab.studySchedule.domain.User">
        update user
        <set>
            <if test="username!=null and username!=''">
                username=#{username},
            </if>
            <if test="password!=null and password!=''">
                `password`=#{password}
            </if>
        </set>
        where id=#{id}
    </update>
    <delete id="delete" parameterType="int">
        delete
        from user
        where id = #{value}
    </delete>
    <insert id="save" parameterType="com.xglab.studySchedule.domain.User" keyColumn="id" keyProperty="id"
            useGeneratedKeys="true">
        insert into user (username, `password`)
        values (#{username}, #{password})
    </insert>
</mapper>